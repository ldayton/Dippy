#!/usr/bin/env python3
"""Claude Code hook entry point for Dippy."""
import sys

if sys.version_info < (3, 8):
    print("Dippy requires Python 3.8+. You have %d.%d." % sys.version_info[:2], file=sys.stderr)
    sys.exit(1)

from pathlib import Path

# Add src directory to path
sys.path.insert(0, str(Path(__file__).parent.parent / "src"))

from dippy.dippy import main
main()
